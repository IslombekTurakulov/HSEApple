<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.HSEApple" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/hse_dark_blue</item>
        <item name="colorPrimaryVariant">@color/greenDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/hse_color_blue</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@color/almostDark</item>
    </style>

    <style name="Theme.HSEApple.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

