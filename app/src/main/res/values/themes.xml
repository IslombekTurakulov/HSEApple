<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.HSEApple" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/greenDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@color/almostDark</item>
    </style>

    <style name="Theme.HSEAppleAction" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/greenDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@color/almostDark</item>
    </style>

    <style name="DefaultButton" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/GreenButtonThemeOverlay</item>
    </style>

    <style name="Theme.App" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="GreenButtonThemeOverlay">
        <!-- For filled buttons, your theme's colorPrimary provides the default background color of the component -->
        <item name="colorPrimary">@color/almostDark</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/TransparentButtonThemeOverlay</item>
    </style>

    <style name="TransparentButtonThemeOverlay">
        <!-- For filled buttons, your theme's colorPrimary provides the default background color of the component -->
        <item name="colorPrimary">@color/almostDark</item>
    </style>

    <style name="Theme.HSEApple.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HSEApple.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HSEApple.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
