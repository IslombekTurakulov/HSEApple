<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="androidx.recyclerview.widget.LinearLayoutManager" />

        <import type="androidx.databinding.ObservableList" />

        <import type="com.cometchat.pro.models.User" />

        <variable
            name="userList"
            type="ObservableList&lt;User&gt;" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkModeBackground"
        android:orientation="vertical"
        tools:context=".ui_components.groups.group_members.CometChatGroupMemberList">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/add_member_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_back"
            app:title="@string/add_members"
            app:titleTextColor="@color/textColorWhite" />

        <RelativeLayout
            android:id="@+id/searchbar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_member_toolbar"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_box_white"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="5dp"
                android:drawableTint="@color/darkModeBackground"
                android:focusedByDefault="false"
                android:hint="@string/search"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="@color/darkModeBackground" />

            <ImageView
                android:id="@+id/clear_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8sp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/ic_close_24dp"
                android:visibility="gone" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_user_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/searchbar_view"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/cometchat_user_list_item" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:text="@string/add"
            android:visibility="gone"
            app:cornerRadius="25dp"
            app:icon="@drawable/ic_add_24dp"
            app:iconTint="@color/textColorWhite"
            tools:visibility="visible" />
    </RelativeLayout>
</layout>
